{
  "verbose": true,
  "ignore": [
    ".git",
    ".next",
    "node_modules/**/node_modules"
  ],
  "execMap": {
    "js": "node --harmony",
    "ts": "ts-node --transpile-only --compiler-options=\"{\\\"module\\\": \\\"commonjs\\\"}\""
  },
  "watch": [
    "index.ts",
    "libs",
    "api"
  ],
  "env": {
    "PUB_DIR": "dist"
  },
  "ext": "js,ts"
}
