{
  "name": "badgen.net",
  "description": "Badge generating service",
  "author": "Amio <amio.cn@gmail.com>",
  "license": "ISC",
  "private": true,
  "scripts": {
    "lint": "standard && standard *.ts",
    "build:api": "tsc -p server.tsconfig.json",
    "build:web": "next build && next export -o dist",
    "build": "npm run tools && npm run build:web && npm run build:api",
    "dev": "npm run build && npm run dev:api",
    "dev:api": "nodemon --config nodemon.json index.ts",
    "dev:web": "next",
    "tools": "ts-node -TP server.tsconfig.json tools/gen-examples.ts",
    "now-build": "npm run build",
    "pretest": "npm run lint",
    "test": "tap test/*.js --reporter spec -j12",
    "start": "node dist/index.js"
  },
  "standard": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "dependencies": {
    "@sentry/integrations": "^5.6.1",
    "@sentry/node": "^5.6.2",
    "badgen": "^2.8.2",
    "badgen-icons": "^0.11",
    "byte-size": "^5.0.1",
    "cheerio": "^1.0.0-rc.3",
    "chrome-webstore": "^1.2.1",
    "date-fns": "^2.0.1",
    "got": "^9.6.0",
    "lodash.debounce": "^4.0.8",
    "micro": "^9.3.4",
    "millify": "^3.1.0",
    "my-way": "^1.0.2",
    "react-debounce-render": "^5.0.0",
    "semver": "^6.3.0",
    "serve-handler": "^6.1.1",
    "serve-marked": "^2.0.2"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.13",
    "@types/fs-extra": "^8.0.0",
    "@types/got": "^9.6.7",
    "@types/lodash.debounce": "^4.0.6",
    "@types/micro": "^7.3.3",
    "@types/node": "^12.7.2",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/semver": "^6.0.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "@zeit/next-typescript": "^1.1.1",
    "eslint": "^6.2.2",
    "fs-extra": "^8.1.0",
    "next": "^9.0.4",
    "nodemon": "^1.19.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "standard": "^14.0.2",
    "supertest": "^4.0.2",
    "tap": "^14.6.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  }
}
