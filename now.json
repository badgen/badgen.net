{
  "version": 2,
  "alias": [
    "v2.badgen.net"
  ],
  "regions": ["sfo", "lhr", "hnd"],
  "builds": [
    { "src": "package.json", "use": "@now/static-build" },
    { "src": "api/*.ts", "use": "@now/node" }
  ],
  "routes": [
    { "src": "/", "headers": { "cache-control": "public, maxage=604800, stale-while-revalidate: 86400" } },
    { "src": "/builder", "headers": { "cache-control": "public, maxage=604800, stale-while-revalidate: 86400" } },
    { "src": "/(?<name>[^/]+).*", "dest": "/api/$name.ts" }
  ],
  "env": {
    "GH_TOKENS": "@badgen-gh-tokens",
    "SENTRY_DSN": "@badgen-sentry-dsn",
    "TRACKING_GA": "@badgen-tracking-ga"
  },
  "github": {
    "autoAlias": false
  }
}
